# ~/.gitconfig
# Глобальная конфигурация Git для NixOS

[user]
    name = avlebedinsky
    email = avlebedinsky@gmail.com

[core]
    editor = nano
    autocrlf = input
    safecrlf = true
    pager = less -R

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    di = diff
    dc = diff --cached
    amend = commit --amend
    aa = add --all
    ff = merge --ff-only
    pullff = pull --ff-only
    noff = merge --no-ff
    fa = fetch --all
    pom = push origin master
    poh = push origin HEAD
    pod = push origin develop
    pog = push origin gh-pages
    pb = push origin HEAD
    rc = rebase --continue
    rs = rebase --skip
    ra = rebase --abort
    ri = rebase --interactive
    cp = cherry-pick
    st = status -s
    cl = clone
    pu = push
    pl = pull
    mr = merge
    om = !git oneline master
    d = diff
    dc = diff --cached
    r = !git ls-files -z --deleted | xargs -0 git rm
    se = !git rev-list --all | xargs git grep -F

[push]
    default = simple

[pull]
    rebase = false

[init]
    defaultBranch = main

[merge]
    tool = vimdiff

[diff]
    tool = vimdiff

[rerere]
    enabled = true

[help]
    autocorrect = 1
